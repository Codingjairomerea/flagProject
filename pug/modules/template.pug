-var title = "Where in the world?"
mixin country-box (img, title, d1, d2, d3)
    div.country-list
        div.country-list__container
            div.country-list__container_img
                img(src="../design/Flag_Korea.png", alt="flagImage")
            div.country-list__container_description
                h3= title
                p= d1
                    span Prueba
                p= d2
                    span Prueba
                p= d3
                    span Prueba

<!DOCTYPE html>
html(lang="en")
    include _head.pug
    body
        header
            div.header(id="header")
                div.header_Title
                    span #{title}
                div.header_Mode(id="mode")
                    i.fas(class="fa-moon" id="moon")
                    span Dark Mode
        block content